<% layout('./layouts/boilerplate') %>
<div>
    <div class="d-flex justify-content-between align-items-center">
        <h3>Welcome back <%= user.username %></h3>
        <form action="/auth/logout">
            <button class="btn btn-primary">Logout</button>
        </form>
    </div>
    
    <p class="display-4 my-4" style="font-size: 1.5rem;">Liked Listings</p>
    <% if (user.likedListings.length) { %>
        <div class="d-flex">
            <% for (let listing of user.likedListings) { %>
                <div class="card ms-3" style="width: 18rem;">
                <img src="<%=listing.image%>" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title"><%=listing.address%></h5>
                    <p class="card-text"><%=listing.rooms%>, Â£<%=listing.monthlyRent%></p>
                    <a href="/properties/<%=listing._id%>" class="btn btn-primary">View</a>
                </div>
                </div>
            <% } %>
        </div>
    <% } else { %>
        <h4>Looks like no properties have been liked yet.</h4>
    <% } %>

    <p class="display-4 my-4" style="font-size: 1.5rem;">Upcoming Viewings</p>
    <% if (user.upcomingViewings.length) { %>
        <div class="d-flex">
            <% for (let viewing of user.upcomingViewings) { %>
                <div class="card ms-3 mb-5" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title"><%= viewing.property.address %></h5>
                    <h6 class="card-subtitle mb-2 text-body-secondary"><%= viewing.date %></h6>
                    <form action="/properties/<%=viewing.property._id%>/viewings?userID=<%=currentUser._id%>&viewingID=<%=viewing._id%>&_method=DELETE" method="POST"><button class="btn btn-danger">Cancel</button></form>
                </div>
                </div>
            <% } %>
        </div>
    <% } else { %>
        <h4>Looks like no properties have been liked yet.</h4>
    <% } %>
</div>